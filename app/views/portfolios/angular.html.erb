<h1>Angular Portfolio items</h1>


 

<%= link_to "Create new items", new_portfolio_path if logged_in?(:site_admin) %><br >



<% @angular_portfolio_items.each do |k| %>

	<h3><%= link_to k.title, portfolio_show_path(k) %></h3><br>
    <%=k.subtitle%><br>
    <%=k.body%><br><br>
    <%= image_tag k.thumb_image if !k.thumb_image.nil? %>
    <%=link_to "Edit", edit_portfolio_path(k) if logged_in?(:site_admin)%>
    <%= link_to 'Destroy', portfolio_path(k), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%>
    <br>
    <hr>
    <br>



	
<%end%>